---
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";
import Counter from "@/components/react/Counter";

// const backUrl = SITE.showBackButton ? `${Astro.url.pathname}` : "/";
---

<Layout title={`Garden | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle="Garden"
    pageDesc="A personal garden page for notes and links."
  >
    <div class="prose max-w-none">
      <!-- React counter demo -->
      <div class="mt-6">
        <Counter client:visible start={5} />
      </div>
    </div>
  </Main>
  <Footer />
</Layout>
