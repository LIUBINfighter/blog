---
import Main from "@/layouts/Main.astro";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { SITE } from "@/config";
import Counter from "@/components/react/Counter";

const backUrl = SITE.showBackButton ? `${Astro.url.pathname}` : "/";
---

<Layout title={`Garden | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle="Garden"
    pageDesc="A personal garden page for notes and links."
  >
    <div class="prose max-w-none">
      <h2>Garden</h2>
      <p>
        This is a placeholder for the Garden page. You can use this page to
        collect short notes, links, or anything you want to surface
        independently from the main posts listing.
      </p>

      <p>TODO: add garden entries, filters, or import from a collection.</p>

      <!-- React counter demo -->
      <div class="mt-6">
        <Counter client:visible start={5} />
      </div>
    </div>
  </Main>
  <Footer />
</Layout>
